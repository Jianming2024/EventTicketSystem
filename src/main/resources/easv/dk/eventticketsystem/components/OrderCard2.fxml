<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="235.0" prefWidth="463.0" style="-fx-background-radius: 10; -fx-background-color: white;" styleClass="userCard" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.eventticketsystem.gui.controllers.OrderCard2">
    <children>
        <VBox alignment="CENTER_LEFT" layoutX="23.0" layoutY="10.0" prefHeight="215.0" prefWidth="417.0" spacing="10.0" styleClass="userCard" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="23.0" AnchorPane.rightAnchor="23.0" AnchorPane.topAnchor="10.0">
            <!-- Order Header -->
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Order Number: #001" />
             <Label text="Customer: John Doe" textFill="#009fda">
            <font>
               <Font name="System Bold" size="15.0" />
            </font>
         </Label>
             <!-- TableView for Ticket Breakdown -->
             <TableView fx:id="ticketsTable" prefHeight="105.0" prefWidth="417.0" style="-fx-background-radius: 5;">
                 <columns>
                     <TableColumn fx:id="actionColumn" prefWidth="153.0" text="Event Name" />
                     <TableColumn fx:id="ticketTypeColumn" prefWidth="154.0" text="Ticket Type" />
                     <TableColumn fx:id="quantityColumn" prefWidth="109.0" text="Quantity" />
                 </columns>
             </TableView>
            <!-- Action Buttons using Icons -->
            <HBox alignment="CENTER_LEFT" prefWidth="437.0" spacing="10.0">
                <!-- Print Order Button -->
                <Button fx:id="printOrderButton" prefWidth="6.0" style="-fx-background-color: transparent;">
                    <graphic>
                        <FontIcon iconColor="BLACK" iconLiteral="bi-printer-fill" iconSize="20" />
                    </graphic>
               <HBox.margin>
                  <Insets left="-8.0" />
               </HBox.margin>
                </Button>
                <!-- Email Tickets Button -->
                <Button fx:id="emailTicketsButton" style="-fx-background-color: transparent;">
                    <graphic>
                        <FontIcon iconColor="BLACK" iconLiteral="bi-envelope-fill" iconSize="20" />
                    </graphic>
                </Button>
                <!-- Spacer that grows and pushes remaining buttons to the right -->
                <Region HBox.hgrow="ALWAYS" />
                <!-- Edit Order Button -->
                <Button fx:id="editOrderButton" style="-fx-background-color: transparent;">
                    <graphic>
                        <FontIcon iconColor="#009640" iconLiteral="bi-pencil-fill" iconSize="20" />
                    </graphic>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
                </Button>
                <!-- Delete Order Button -->
                <Button fx:id="deleteOrderButton" style="-fx-background-color: transparent;">
                    <graphic>
                        <FontIcon iconColor="#c00d0d" iconLiteral="bi-trash-fill" iconSize="20" />
                    </graphic>
               <HBox.margin>
                  <Insets right="-8.0" />
               </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
