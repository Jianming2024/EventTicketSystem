<VBox spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.eventticketsystem.gui.controllers.componentsControllers.AddTicketController">
   <children>
      <Label prefHeight="26.0" prefWidth="173.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="New ticket">
         <VBox.margin>
            <Insets left="9.0" />
         </VBox.margin>
      </Label>
      <GridPane hgap="10" vgap="10">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <children>
            <Label text="Ticket type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="comboAssign2" prefWidth="150.0" GridPane.columnIndex="1" />            <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtStartTime" maxWidth="181.0" prefHeight="26.0" prefWidth="181.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="thisone" text="Event:" />
            <ComboBox fx:id="comboAssign" prefHeight="26.0" prefWidth="181.0" GridPane.columnIndex="1" />
            <ComboBox fx:id="comboAssign1" prefHeight="26.0" prefWidth="181.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onClickNewType" prefHeight="25.0" prefWidth="27.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <graphic>
                  <FontIcon iconLiteral="bi-plus" />
               </graphic>
            </Button>
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints maxWidth="183.0" minWidth="167.0" prefWidth="181.0" />
            <ColumnConstraints maxWidth="46.0" minWidth="10.0" prefWidth="32.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" prefHeight="29.0" prefWidth="271.0" spacing="10">
         <children>
            <Button fx:id="btnCancel" onAction="#onClickCancel" style="-fx-background-color: transparent; -fx-border-color: C00D0D; -fx-text-fill: C00D0D; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5 15;" styleClass="btnCancel" stylesheets="@views/Style.css" text="Cancel" />
            <Button fx:id="btnSaveChanges" onAction="#onClickSaveChanges" style="-fx-background-color: transparent; -fx-border-color: #009640; -fx-text-fill: #009640; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5 15;" styleClass="btnCreate" stylesheets="@views/Style.css" text="Create">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
