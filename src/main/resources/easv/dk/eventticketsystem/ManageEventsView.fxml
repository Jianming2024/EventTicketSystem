<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.eventticketsystem.gui.controllers.ManageEventsController">
    <!-- Left Sidebar -->
    <left>
        <fx:include source="components/Sidebar.fxml" />
    </left>
    <!-- Main content for managing events -->
    <center>
        <VBox prefWidth="1000.0" spacing="10">
            <!-- Top: Toolbar -->
            <fx:include source="components/Toolbar.fxml" />
            <!-- Container for the Create button aligned to right -->
            <HBox alignment="CENTER_RIGHT" prefHeight="34.0" prefWidth="1000.0">
                <Button fx:id="btnCreateNewEvent" style="-fx-background-color: transparent; -fx-border-color: #009640; -fx-text-fill: #009640; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5 15;" text="Create New User">
                    <HBox.margin>
                        <Insets right="80.0" />
                    </HBox.margin></Button>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </HBox>
            <!-- FlowPane for event cards -->
            <FlowPane fx:id="eventCardPane" alignment="TOP_CENTER" hgap="20.0" prefHeight="904.0" prefWidth="1000.0" vgap="20.0">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </FlowPane>
        </VBox>
    </center>
</BorderPane>
