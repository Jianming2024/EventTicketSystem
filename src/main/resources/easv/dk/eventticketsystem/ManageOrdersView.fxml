<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.eventticketsystem.gui.controllers.ManageOrdersController">
    <!-- Left Sidebar -->
    <left>
        <fx:include source="Sidebar.fxml" />
    </left>

    <!-- Main content for managing users -->
    <center>
        <VBox spacing="10">
        <TableView fx:id="ordersTable" layoutX="20.0" layoutY="50.0" prefHeight="250.0" prefWidth="530.0">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="93.60003662109375" text="Order ID" />
                <TableColumn fx:id="customerNameColumn" prefWidth="131.199951171875" text="Customer Name" />
                <TableColumn fx:id="eventColumn" prefWidth="120.0" text="Event" />
                <TableColumn fx:id="quantityColumn" minWidth="0.0" prefWidth="72.0" text="Quantity" />
                <!-- Print Ticket Column -->
                <TableColumn fx:id="ticketTypeColumn" prefWidth="111.99997558593748" text="Ticket type" />
            </columns>
            <VBox.margin>
                <Insets left="40.0" right="40.0" top="40.0" />
            </VBox.margin>
        </TableView>

                     <!-- Print Tickets -->
         <Button fx:id="btnPrintTickets" layoutX="221.0" layoutY="340.0" prefHeight="40.0" prefWidth="140.0" style="-fx-alignment: center-left;" styleClass="mainBtn" stylesheets="@views/Style.css">
            <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="bi-printer-fill" iconSize="20" />
            </graphic>
         </Button>

   </VBox>
    </center>
</BorderPane>
