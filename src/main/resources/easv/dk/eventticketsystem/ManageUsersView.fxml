<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="usersPane" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.eventticketsystem.gui.controllers.ManageUsersController">
    <!-- Left Sidebar -->
    <left>
    <fx:include source="Sidebar.fxml" />
    </left>
<!-- User Table -->
    <center>
    <VBox spacing="10">
    <TableView fx:id="userTable" layoutX="20.0" layoutY="50.0" prefHeight="250.0" prefWidth="530.0">
        <columns>
            <TableColumn fx:id="colName" prefWidth="180.0" text="Name" />
            <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
            <TableColumn fx:id="colRole" prefWidth="150.0" text="Role" />
        </columns>
    </TableView>

    <!-- Search Bar -->
    <TextField fx:id="searchField" layoutX="20.0" layoutY="15.0" prefWidth="300.0" promptText="Search user..." />
    <Button fx:id="btnSearch" layoutX="330.0" layoutY="15.0" onAction="#onSearchUser" text="Search" />

    <!-- Buttons -->
    <Button fx:id="btnAddUser" layoutX="20.0" layoutY="320.0" onAction="#onAddUser" text="Add User" />
    <Button fx:id="btnEditUser" layoutX="120.0" layoutY="320.0" onAction="#onEditUser" text="Edit User" />
    <Button fx:id="btnDeleteUser" layoutX="220.0" layoutY="320.0" onAction="#onDeleteUser" text="Delete User" />
    </VBox>
    </center>
</BorderPane>
